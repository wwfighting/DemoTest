<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_container"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:elevation="3dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_goods_show" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/tv_goods_tip"
            android:layout_margin="4dp"
            android:background="@drawable/goods_tip_bg_shape"
            android:text="新品"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/iv_goods_show"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_goods_title"
            android:text="小康美厨"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_goods_title"
            android:id="@+id/tv_goods_nowprice"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="现价：￥6999-24999"
            android:textColor="#E4393C"
            android:layout_marginLeft="16dp"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_goods_nowprice"
            android:id="@+id/tv_goods_orgprice"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="原价：￥13996-49996"
            android:textColor="#999999"
            android:layout_marginLeft="16dp"
            android:textSize="12sp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>