<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_name"
                android:text="ww"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_phone"
                android:layout_alignParentRight="true"
                android:textColor="#666666"
                android:text="18550712384"
                android:gravity="center"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            android:id="@+id/tv_address_content"
            android:text="江苏省南京市雨花台区铁心桥雨花街道公交站台大周路北站旁牛首福园小区7栋1单元602室"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/textLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:id="@+id/cb_address_default"
                android:gravity="center"
                android:textSize="12sp"
                android:text="默认地址"
                android:textColor="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:drawableLeft="@drawable/ic_delete_24dp"
                android:gravity="center"
                android:textSize="12sp"
                android:id="@+id/tv_del_address"
                android:textColor="#666666"
                android:layout_centerVertical="true"
                android:text="删除"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_address"
                android:layout_marginRight="16dp"
                android:drawableLeft="@drawable/ic_edit_24dp"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:textColor="#666666"
                android:text="编辑"
                android:layout_toLeftOf="@+id/tv_del_address"/>


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>