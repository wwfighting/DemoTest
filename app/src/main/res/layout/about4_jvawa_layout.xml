<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:background="#F44336"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="60sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffeeeeee">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/cv_intro"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《家瓦简介》"
                    android:layout_marginTop="8dp"
                    android:id="@+id/tv_intro"
                    android:background="@drawable/txt_selector"
                    android:textColor="#F44336"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:lineSpacingExtra="3dp"
                    android:textSize="14sp"
                    android:letterSpacing="0.3"
                    android:text="家瓦商城是江苏阿米巴信息科技有限公司，运用互联网思维“F2C互联网＋”模式，颠覆传统的家装服务标准。。。"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/cv_in"
            app:cardBackgroundColor="#FFFFFF"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《入住介绍》"
                    android:id="@+id/tv_in"
                    android:clickable="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/txt_selector"
                    android:textColor="#F44336"
                    android:gravity="center_vertical"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:lineSpacingExtra="3dp"
                    android:textSize="14sp"
                    android:letterSpacing="0.3"
                    android:text="①商家企业资质审核"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:lineSpacingExtra="3dp"
                    android:textSize="14sp"
                    android:letterSpacing="0.3"
                    android:text="②设计师入驻资质审核"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:lineSpacingExtra="3dp"
                    android:textSize="14sp"
                    android:letterSpacing="0.3"
                    android:text="③联系方式"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/cv_copyright"
            app:cardBackgroundColor="#FFFFFF"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《版权申明》"
                    android:id="@+id/tv_copyright"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/txt_selector"
                    android:textColor="#F44336"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:lineSpacingExtra="3dp"
                    android:textSize="14sp"
                    android:letterSpacing="0.3"
                    android:text="1、家瓦平台除部分署名（包括文字、图片、音频、产品等）为家瓦平台原创外，其余信息均转载自国内外公开媒体、网络、报道、用户，其版权按国家规定分属其原创者所有。。。"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>