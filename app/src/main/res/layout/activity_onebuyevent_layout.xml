<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/rl_bg"
        android:background="@drawable/ic_activity_bg">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="380dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_activity_main">

            <Button
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:id="@+id/btn_event_buy"
                android:text="立即抢购"
                android:textColor="#7e6f6f"
                android:transitionName="event_share"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_activity_buy"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/iv_event_off"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_activity_off"/>

    </RelativeLayout>

</FrameLayout>