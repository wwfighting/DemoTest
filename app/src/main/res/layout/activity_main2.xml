<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:id="@+id/frame_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/rgp_main"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@drawable/event_bottom">

            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rdb_home"
                android:text="首页"
                android:button="@null"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@drawable/txtcolor_selector"
                android:drawableTop="@drawable/home_selector"
                android:paddingLeft="0dp" />

            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rdb_publish"
                android:text="分类"
                android:button="@null"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@drawable/txtcolor_selector"
                android:drawableTop="@drawable/cate_selector"
                android:paddingLeft="0dp" />

            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rdb_event"
                android:text=""
                android:button="@null"
                android:textSize="12sp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@drawable/txtcolor_selector"
                android:drawableTop="@drawable/cate_selector"
                android:paddingLeft="0dp" />

            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rdb_search"
                android:text="购物"
                android:button="@null"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@drawable/txtcolor_selector"
                android:drawableTop="@drawable/shoppingcart_selector"
                android:paddingLeft="0dp" />

            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rdb_my"
                android:text="个人"
                android:button="@null"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@drawable/txtcolor_selector"
                android:drawableTop="@drawable/my_selector"
                android:paddingLeft="0dp" />

        </RadioGroup>
        <ImageView
            android:layout_height="70dp"
            android:layout_width="80dp"
            android:id="@+id/iv_event"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:src="@drawable/event_main" />
    </RelativeLayout>


</RelativeLayout>