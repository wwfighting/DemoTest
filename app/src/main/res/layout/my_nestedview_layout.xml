<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true"
    android:id="@+id/nsv_my"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:background="#ffffff"
            app:cardCornerRadius="3dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_order"
                    android:clickable="true"
                    android:background="@drawable/background_selector">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txt_order_label"
                        android:text="全部订单"
                        android:textSize="@dimen/txt_my_title"
                        android:drawableLeft="@drawable/ic_allorder_24dp"
                        android:paddingLeft="16dp"
                        android:drawablePadding="6dp"
                        android:textColor="@color/day_primaryTextColor"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/nextColor"
                        android:drawableRight="@drawable/next_small"
                        android:paddingRight="15dp"
                        android:drawablePadding="5dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textLine"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_coupons"
                    android:clickable="true"
                    android:background="@drawable/background_selector">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="我的礼券"
                        android:textSize="@dimen/txt_my_title"
                        android:drawableLeft="@drawable/ic_coupons_24dp"
                        android:paddingLeft="16dp"
                        android:textColor="@color/day_primaryTextColor"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/nextColor"
                        android:drawableRight="@drawable/next_small"
                        android:paddingRight="15dp"
                        android:drawablePadding="5dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textLine"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_activity"
                    android:clickable="true"
                    android:background="@drawable/background_selector">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="最新活动"
                        android:id="@+id/tv_acty_label"
                        android:textSize="@dimen/txt_my_title"
                        android:drawableLeft="@drawable/ic_activity_24dp"
                        android:paddingLeft="16dp"
                        android:textColor="@color/day_primaryTextColor"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/iv_my_acty"
                        android:layout_toRightOf="@+id/tv_acty_label"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/nextColor"
                        android:drawableRight="@drawable/next_small"
                        android:paddingRight="15dp"
                        android:drawablePadding="5dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textLine"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_address"
                    android:clickable="true"
                    android:background="@drawable/background_selector">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="地址管理"
                        android:textSize="@dimen/txt_my_title"
                        android:drawableLeft="@drawable/ic_address_24dp"
                        android:paddingLeft="16dp"
                        android:textColor="@color/day_primaryTextColor"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/nextColor"
                        android:drawableRight="@drawable/next_small"
                        android:paddingRight="15dp"
                        android:drawablePadding="5dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textLine"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_settings"
                    android:clickable="true"
                    android:background="@drawable/background_selector">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="设  置"
                        android:drawableLeft="@drawable/ic_settings"
                        android:textSize="@dimen/txt_my_title"
                        android:paddingLeft="16dp"
                        android:textColor="@color/day_primaryTextColor"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/nextColor"
                        android:drawableRight="@drawable/next_small"
                        android:paddingRight="15dp"
                        android:drawablePadding="5dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textLine"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_about"
                    android:clickable="true"
                    android:background="@drawable/background_selector">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="关  于"
                        android:drawableLeft="@drawable/ic_about"
                        android:textSize="@dimen/txt_my_title"
                        android:paddingLeft="16dp"
                        android:textColor="@color/day_primaryTextColor"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/nextColor"
                        android:drawableRight="@drawable/next_small"
                        android:paddingRight="15dp"
                        android:drawablePadding="5dp"/>
                </RelativeLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>


</android.support.v4.widget.NestedScrollView>